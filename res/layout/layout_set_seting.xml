<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_sets_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/header_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rela_sets_titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dip" >

        <ImageView
            android:id="@+id/iv_sets_goback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:contentDescription="@string/sets_title"
            android:src="@drawable/selector_goback_bg" />

        <TextView
            android:id="@+id/txt_sets_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/sets_title"
            android:textColor="@color/white"
            android:textSize="@dimen/main_label" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scroll_sets_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/actionbar_bg" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/txt_sets_push_set"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sets_push_set"
                    android:textSize="@dimen/sets_title_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_push_set"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/rela_sets_news_push"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp" >

                    <TextView
                        android:id="@+id/txt_sets_news_push"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/sets_news_push"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sets_content_size" />

                    <ImageButton
                        android:id="@+id/tb_sets_news_push"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/butn_open"
                        android:contentDescription="@string/app_name" />
                </RelativeLayout>

                <View
                    android:id="@+id/line1"
                    android:layout_width="match_parent"
                    android:layout_height="0.1dip"
                    android:layout_marginLeft="6dip"
                    android:layout_marginRight="6dip"
                    android:background="@drawable/ic_list_line_white" />

                <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/rela_sets_push_ring"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp" >

                    <TextView
                        android:id="@+id/txt_sets_push_ring"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/sets_push_ring"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sets_content_size" />

                    <ImageButton
                        android:id="@+id/tb_sets_push_ring"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/butn_open"
                        android:contentDescription="@string/app_name" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/txt_sets_read_set"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sets_reading_set"
                    android:textSize="@dimen/sets_title_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_reading_set"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/rela_sets_font_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp" >

                    <TextView
                        android:id="@+id/txt_sets_font_size_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/font_size"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sets_content_size" />

                    <TextView
                        android:id="@+id/txt_sets_font_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="@string/font_size_mid"
                        android:textSize="@dimen/sets_content_size" />
                </RelativeLayout>

                <View
                    android:id="@+id/line2"
                    android:layout_width="match_parent"
                    android:layout_height="0.1dip"
                    android:layout_marginLeft="6dip"
                    android:layout_marginRight="6dip"
                    android:background="@drawable/ic_list_line_white" />

                <RelativeLayout
                    android:id="@+id/rela_sets_img_loading_mode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp" >

                    <TextView
                        android:id="@+id/txt_sets_img_loading_mode_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/sets_img_load_mode"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sets_content_size" />

                    <TextView
                        android:id="@+id/txt_sets_img_loading_mode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="@string/sets_img_smart"
                        android:textSize="@dimen/sets_content_size" />
                </RelativeLayout>

                <View
                    android:id="@+id/line3"
                    android:layout_width="match_parent"
                    android:layout_height="0.1dip"
                    android:layout_marginLeft="6dip"
                    android:layout_marginRight="6dip"
                    android:background="@drawable/ic_list_line_white" />

                <RelativeLayout
                    android:id="@+id/rela_sets_reading_mode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp" >

                    <TextView
                        android:id="@+id/txt_sets_reading_mode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/night_mode"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sets_content_size" />

                    <ToggleButton
                        android:id="@+id/tb_sets_reading_mode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/selector_butn_toggle"
                        android:checked="false"
                        android:textOff=""
                        android:textOn="" />
                </RelativeLayout>

                <View
                    android:id="@+id/line4"
                    android:layout_width="match_parent"
                    android:layout_height="0.1dip"
                    android:layout_marginLeft="6dip"
                    android:layout_marginRight="6dip"
                    android:background="@drawable/ic_list_line_white" />

                <RelativeLayout
                    android:id="@+id/rela_sets_clear_buffer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp" >

                    <TextView
                        android:id="@+id/txt_sets_clear_buffer_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/sets_clear_buffer"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sets_content_size" />

                    <TextView
                        android:id="@+id/txt_sets_clear_buffer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:ems="8"
                        android:text="@string/sets_clear_buffer_describe"
                        android:textSize="@dimen/sets_content_size_gray" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/txt_sets_binding_set"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sets_binding_thrid_account"
                    android:textSize="@dimen/sets_title_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_binding_accounts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/rela_sets_binding_sina"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true" >

                        <ImageView
                            android:layout_width="42dip"
                            android:layout_height="42dip"
                            android:contentDescription="@string/sets_sina"
                            android:scaleType="fitXY"
                            android:src="@drawable/sets_sina_icon" />

                        <TextView
                            android:id="@+id/txt_sets_sina"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dip"
                            android:text="@string/sets_sina"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sets_content_size" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/iv_sets_binding_sina"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/sets_sina" />
                </RelativeLayout>

                <View
                    android:id="@+id/line5"
                    android:layout_width="match_parent"
                    android:layout_height="0.1dip"
                    android:layout_marginLeft="6dip"
                    android:layout_marginRight="6dip"
                    android:background="@drawable/ic_list_line_white" />

                <RelativeLayout
                    android:id="@+id/rela_sets_binding_qq"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true" >

                        <ImageView
                            android:layout_width="42dip"
                            android:layout_height="42dip"
                            android:contentDescription="@string/sets_qq_space"
                            android:scaleType="fitXY"
                            android:src="@drawable/sets_qzone_icon" />

                        <TextView
                            android:id="@+id/txt_sets_qq"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dip"
                            android:text="@string/sets_qq_space"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sets_content_size" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/iv_sets_binding_qq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/sets_qq_space" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/txt_sets_production"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sets_product_info"
                    android:textSize="@dimen/sets_title_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_product_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/rela_sets_about"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp" >

                    <TextView
                        android:id="@+id/txt_sets_about"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/sets_about"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sets_content_size" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/sets_about"
                        android:src="@drawable/arrow" />
                </RelativeLayout>

                <View
                    android:id="@+id/line6"
                    android:layout_width="match_parent"
                    android:layout_height="0.1dip"
                    android:layout_marginLeft="6dip"
                    android:layout_marginRight="6dip"
                    android:background="@drawable/ic_list_line_white" />

                <RelativeLayout
                    android:id="@+id/rela_sets_feedback"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp" >

                    <TextView
                        android:id="@+id/txt_sets_feedback"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/sets_feedback"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sets_content_size" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/sets_feedback"
                        android:src="@drawable/arrow" />
                </RelativeLayout>

                <View
                    android:id="@+id/line7"
                    android:layout_width="match_parent"
                    android:layout_height="0.1dip"
                    android:layout_marginLeft="6dip"
                    android:layout_marginRight="6dip"
                    android:background="@drawable/ic_list_line_white" />

                <RelativeLayout
                    android:id="@+id/rela_sets_user_guide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp" >

                    <TextView
                        android:id="@+id/txt_sets_user_guide"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/sets_user_guide"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sets_content_size" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/sets_user_guide"
                        android:src="@drawable/arrow" />
                </RelativeLayout>

                <View
                    android:id="@+id/line8"
                    android:layout_width="match_parent"
                    android:layout_height="0.1dip"
                    android:layout_marginLeft="6dip"
                    android:layout_marginRight="6dip"
                    android:background="@drawable/ic_list_line_white" />

                <RelativeLayout
                    android:id="@+id/rela_sets_check_update"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp" >

                    <TextView
                        android:id="@+id/txt_sets_check_update"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/sets_check_update"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sets_content_size" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/sets_check_update"
                        android:src="@drawable/arrow" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>