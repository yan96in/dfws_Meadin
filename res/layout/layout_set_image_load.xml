<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_dialog_img_load_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/share_dialog_bg"
    android:orientation="vertical"
    android:padding="@dimen/list_padding">

    <TextView
        android:id="@+id/txt_dialog_img_load_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:padding="10dip"
        android:text="@string/sets_img_load_mode"
        android:textColor="@color/black"
        android:textSize="@dimen/dialog_sets_font_size_title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dip"
        android:background="@drawable/ic_list_line_white" />

    <RelativeLayout
        android:id="@+id/rela_dialog_img_load_null"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dip" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txt_dialog_img_load_null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sets_img_null"
                android:textColor="@color/black"
                android:textSize="@dimen/dialog_sets_font_size" />

            <TextView
                android:id="@+id/txt_dialog_img_load_null_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5.0dip"
                android:text="@string/sets_img_null_describe"
                android:textSize="@dimen/dialog_sets_font_size_sub" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_dialog_img_load_null"
            android:layout_width="18dip"
            android:layout_height="18dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/sets_img_null"
            android:scaleType="fitXY"
            android:src="@drawable/umeng_fb_tick_selected" 
            android:visibility="gone"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dip"
        android:background="@drawable/ic_list_line_white" />

    <RelativeLayout
        android:id="@+id/rela_dialog_img_load_has"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dip" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txt_dialog_img_load_has"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sets_img_has"
                android:textColor="@color/black"
                android:textSize="@dimen/dialog_sets_font_size" />

            <TextView
                android:id="@+id/txt_dialog_img_load_has_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5.0dip"
                android:text="@string/sets_img_has_describe"
                android:textSize="@dimen/dialog_sets_font_size_sub" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_dialog_img_load_has"
            android:layout_width="18dip"
            android:layout_height="18dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/sets_img_has"
            android:scaleType="fitXY"
            android:src="@drawable/umeng_fb_tick_selected" 
            android:visibility="gone"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dip"
        android:background="@drawable/ic_list_line_white" />

    <RelativeLayout
        android:id="@+id/rela_dialog_img_load_smart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dip" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txt_dialog_img_load_smart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sets_img_smart"
                android:textColor="@color/black"
                android:textSize="@dimen/dialog_sets_font_size" />

            <TextView
                android:id="@+id/txt_dialog_img_load_smart_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5.0dip"
                android:text="@string/sets_img_smart_describe"
                android:textSize="@dimen/dialog_sets_font_size_sub" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_dialog_img_load_smart"
            android:layout_width="18dip"
            android:layout_height="18dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/sets_img_smart"
            android:scaleType="fitXY"
            android:src="@drawable/umeng_fb_tick_selected" 
            android:visibility="gone"/>
    </RelativeLayout>

</LinearLayout>