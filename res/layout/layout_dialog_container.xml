<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/share_dialog_bg"
    android:orientation="vertical" >
      
	<LinearLayout
	    android:id="@+id/linear_dialog_container"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center_vertical"
	    android:orientation="vertical">
		   
	</LinearLayout>		

	<LinearLayout
	    android:id="@+id/linear_dialog_btn_container"
	    android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_marginTop="1.0dip">
			 <View
            android:layout_width="match_parent"
            android:layout_height="2.0dip"
            android:background="#aacccccc" />
	    <TextView
            android:id="@+id/txt_dialog_btn_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10.0dip"
            android:layout_weight="1.0"
            android:gravity="center_horizontal"
            android:textColor="@color/black"
            android:text="确认"
            android:background="@drawable/selector_dialog_btn_bg"
            android:textSize="@dimen/dialog_btn_font_size" />

        <View
            android:layout_width="2.0dip"
            android:layout_height="match_parent"
            android:background="#aacccccc" />

        <TextView
            android:id="@+id/txt_dialog_btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10.0dip"
            android:layout_weight="1.0"
            android:gravity="center_horizontal"
            android:textColor="@color/black"
            android:text="取消"
            android:background="@drawable/selector_dialog_btn_bg"
            android:textSize="@dimen/dialog_btn_font_size" />
	</LinearLayout>
</LinearLayout>
