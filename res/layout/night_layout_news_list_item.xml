<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/night_list_item_bg"
    android:orientation="horizontal"
    android:padding="8dip" >

    <ImageView
        android:id="@+id/news_list_item_img"
        android:layout_width="@dimen/base_item_img_width"
        android:layout_height="@dimen/base_item_img_height"
        android:scaleType="fitXY"
        android:src="@drawable/def_pic_small_night" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/base_item_padding"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/news_list_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/base_item_title_font_size" />

        <TextView
            android:id="@+id/news_list_item_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip"
            android:gravity="right"
            android:textSize="@dimen/base_item_time_font_size" />
    </LinearLayout>

</LinearLayout>