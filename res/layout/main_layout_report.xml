<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
         xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" 
        android:id="@+id/report_container"
        >
        <WebView
        android:id="@+id/webview_report"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

        <RelativeLayout 
            android:id="@+id/relativelayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true">                    
         <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"  
            android:id="@+id/main_more_gone"
            android:visibility="gone"
            >

            <RelativeLayout
                android:id="@+id/main_linearlayout_more_l1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/main_linearlayout_l2"
                android:background="@drawable/umeng_socialize_shareboard_item_background"
                android:gravity="center_horizontal" >

                <TextView
                    android:id="@+id/main_layout_renurn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:text="字体大小" />

                <TextView
                    android:id="@+id/main_layout_large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:padding="20dp"
                    android:text="超大" />

                <TextView
                    android:id="@+id/main_layout_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/main_layout_the"
                    android:padding="20dp"
                    android:text="小" />

                <TextView
                    android:id="@+id/main_layout_the"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/main_layout_big"
                    android:padding="20dp"
                    android:text="中" />

                <TextView
                    android:id="@+id/main_layout_big"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/main_layout_large"
                    android:padding="20dp"
                    android:text="大" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/main_linearlayout_more_l2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/umeng_socialize_shareboard_item_background"
                android:layout_below="@+id/main_linearlayout_more_l1" >

                <TextView
                    android:id="@+id/main_textview_v1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:text="夜间模式" />
            <ToggleButton 
                 android:id="@+id/main_progressBar_on_off" 
                 android:layout_width="wrap_content" 
                 android:layout_height="wrap_content" 
                 android:layout_alignParentRight="true"
                 android:layout_centerVertical="true" 
                 android:background="@drawable/selector_butn_toggle" 
                 android:checked="true" />
            </RelativeLayout>          
          </RelativeLayout>
        <RelativeLayout
            android:id="@+id/main_linearlayout_l1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:background="@color/whitesomke"
            android:layout_below="@+id/main_more_gone"
            >
          <ImageView
            android:id="@+id/iv_news_detail_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5.0dip"
            android:layout_centerVertical="true"
            android:src="@drawable/selector_goback_bg" />
      <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5.0dip"
            android:background="@color/whitesomke" >

            <RelativeLayout
                android:id="@+id/relative_news_detail_comment"
                android:layout_width="@dimen/news_detail_menu_width"
                android:layout_height="wrap_content"
                android:background="@color/whitesomke" >

                <ImageView
                    android:id="@+id/main_layout_comments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/selector_news_menu_comment_bg" />
                
                <TextView
					android:id="@+id/txt_news_detail_notice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5.0dip"
                    android:background="@color/red"
                  	android:paddingLeft="3dip"
                  	android:paddingRight="3dip"
                    android:text="@string/news_detail_notice"
                    android:textColor="@color/white"
                    android:textSize="@dimen/news_detail_notice" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/main_layout_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/news_detail_menu_horizontal_margin"
                android:src="@drawable/selector_news_menu_share_bg" />

            <ImageView
                android:id="@+id/main_layout_collection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/news_detail_menu_horizontal_margin"
                android:src="@drawable/selector_news_menu_favorite_bg" />

            <ImageView
                android:id="@+id/main_layout_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/news_detail_menu_horizontal_margin"
                android:src="@drawable/selector_news_menu_more_bg" />
        </LinearLayout>

        </RelativeLayout>
      </RelativeLayout>
    </RelativeLayout>
