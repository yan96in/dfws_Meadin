<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#00000000"
     >

<RelativeLayout
    android:id="@+id/main_relativelayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <com.dfws.shhreader.adapter.MyGallery
        android:id="@+id/gallery"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"        
        android:spacing="10px" 
        />
    <RelativeLayout
        android:id="@+id/activity_main_rl2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" 
       >
         
        <RelativeLayout 
            android:id="@+id/main_linearlayout_l2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"            
            android:gravity="center_horizontal"
            >
             <TextView
            android:id="@+id/main_layout_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             />

        <TextView
            android:id="@+id/main_layout_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
             />
      <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true" 
            >
            <TextView
            android:id="@+id/main_layout_number_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
            <TextView
             android:id="@+id/main_layout_number_two"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="/" />
            <TextView
            android:id="@+id/main_layout_number_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />
            
        </LinearLayout>
            
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/main_linearlayout_l1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:layout_below="@+id/main_linearlayout_l2"
            android:background="@color/whitesomke"
            >
          <ImageView
            android:id="@+id/iv_news_detail_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5.0dip"
            android:layout_centerVertical="true"
            android:src="@drawable/selector_goback_bg" />
      <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5.0dip"
            android:background="@color/whitesomke" >

            <RelativeLayout
                android:id="@+id/relative_news_detail_comment"
                android:layout_width="@dimen/news_detail_menu_width"
                android:layout_height="wrap_content"
                android:background="@color/whitesomke" >

                <ImageView
                    android:id="@+id/main_layout_comments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/selector_news_menu_comment_bg" />
                
                <TextView
					android:id="@+id/txt_news_detail_notice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5.0dip"
                    android:background="@color/red"
                  	android:paddingLeft="3dip"
                  	android:paddingRight="3dip"
                    android:text="@string/news_detail_notice"
                    android:textColor="@color/white"
                    android:textSize="@dimen/news_detail_notice" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/main_layout_share_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/news_detail_menu_horizontal_margin"
                android:src="@drawable/selector_news_menu_share_bg" />

            <ImageView
                android:id="@+id/main_layout_collection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/news_detail_menu_horizontal_margin"
                android:src="@drawable/selector_news_menu_favorite_bg" />

            <ImageView
                android:id="@+id/main_layout_more_download"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/news_detail_menu_horizontal_margin"
                android:src="@drawable/selector_news_menu_more_bg" />
        </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>
</FrameLayout>