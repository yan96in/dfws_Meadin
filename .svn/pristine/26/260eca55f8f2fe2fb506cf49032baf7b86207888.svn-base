<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="163dip" >

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_base_list_header_imgbox"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/day_main_color"
        android:padding="5dip" >

        <TextView
            android:id="@+id/txt_base_list_header_imgtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8.0dip"
            android:ellipsize="end"
            android:maxLength="18"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/base_list_header_imgtitle_font_size" />

        <LinearLayout
            android:id="@+id/linear_base_list_header_imgindexbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8.0dip"
            android:orientation="horizontal" >
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>