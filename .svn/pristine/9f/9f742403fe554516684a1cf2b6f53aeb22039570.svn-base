<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ic_support_402_107" >
    <LinearLayout 
        android:id="@+id/linear_comment_support"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1.0">
        <ImageView 
            android:id="@+id/iv_comment_support"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/selector_comment_support_bg"
            android:contentDescription="@string/app_name"/>
        <TextView 
            android:id="@+id/txt_comment_support_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:textSize="@dimen/comment_support"
            android:text="@string/comment_support"/>
    </LinearLayout>
	<LinearLayout 
	    android:id="@+id/linear_comment_copy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1.0">
         <ImageView 
            android:id="@+id/iv_comment_copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/selector_comment_copy_bg"
            android:contentDescription="@string/app_name"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:textSize="@dimen/comment_support"
            android:text="@string/comment_copy"/>
    </LinearLayout>
</LinearLayout>
