<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/actionbar_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/txt_comment_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:ellipsize="middle"
            android:maxLength="25"
            android:singleLine="true"
            android:textColor="@color/blue"
            android:textSize="@dimen/comment_user_name" />
        <TextView
            android:id="@+id/txt_comment_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"          
            android:maxLength="25"
            android:textSize="@dimen/comment_time" />
    </RelativeLayout>
	<TextView
            android:id="@+id/txt_comment_item_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dip"
            android:layout_marginBottom="8dip"
            android:textColor="@color/black"
            android:textSize="@dimen/comment_text" />
</LinearLayout>