<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    <RelativeLayout
         android:padding="10dip"
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:background="@color/header_bg">
        <ImageView 
            android:id="@+id/reg_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:background="@drawable/selector_login_bg"
            android:src="@drawable/selector_goback_bg"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="免费注册"
            android:textColor="@color/white"
            android:textSize="@dimen/main_label" />

            
         <TextView
            android:id="@+id/reg_regist_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="登录"
            android:background="@drawable/selector_login_bg"
            android:textColor="@color/white"
            android:textSize="20dp"/>
    </RelativeLayout>
    <EditText        
        android:maxLength="31"
        android:id="@+id/reg_userid_etxt"
        android:digits="@string/check_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:drawableLeft="@drawable/ic_iput_user_52_52"
        android:hint="请使用邮箱作为用户名 " 
        android:gravity="left|center_vertical" />
    <EditText        
        android:id="@+id/reg_password_etxt"
        android:digits="@string/check_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:drawableLeft="@drawable/ic_iput_user_52_52"
        android:hint="密码"
        android:password="true"
        android:maxLength="20"
        android:gravity="left|center_vertical" />
   <TextView
        android:id="@+id/reg_loginbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:background="@drawable/selector_login_bg"
        android:gravity="center_horizontal"
        android:paddingTop="10dip"
        android:paddingBottom="10dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:text="注册"
        android:textColor="@color/white"
        android:textSize="@dimen/main_label" />
</LinearLayout>
